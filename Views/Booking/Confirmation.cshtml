@model CabBookingSystem.Models.Booking
<!-- Main Container for Confirmation Page -->
<div class="confirmation-container">
    <div class="confirmation-card">
        <!-- Confirmation Title -->
        <div class="confirmation-header">
            <h2><i class="fa fa-check-circle"></i> Booking Confirmed</h2>
            <img src="~/images/cabImg.avif" alt="Booking Confirmed" class="confirmation-banner" />
        </div>

        <!-- Booking Details -->
        <div class="booking-details">
            <div class="detail-item">
                <h4>Pickup Location</h4>
                <p>@Model.PickupLocation</p>
            </div>

            <div class="detail-item">
                <h4>Drop Location</h4>
                <p>@Model.DropLocation</p>
            </div>

            <div class="detail-item">
                <h4>Booking Time</h4>
                <p>@Model.BookingTime.ToString("dd MMM yyyy, hh:mm tt")</p>
            </div>

            <div class="detail-item">
                <h4>Status</h4>
                <p class="status">@Model.Status</p>
            </div>
        </div>

        <!-- Confirmation Message -->
        <div class="confirmation-message">
            <p>Thank you for choosing us! We hope you have a pleasant ride.</p>
        </div>
    </div>
</div>

<!-- Styles for the Confirmation Page -->
<style>
    /* Container for the Confirmation Page */
    .confirmation-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 80vh;
        padding: 20px;
        background: linear-gradient(to right, #f8f9fa, #eceff1);
    }

    .confirmation-card {
        background-color: #ffffff;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
        max-width: 600px;
        width: 100%;
        text-align: center;
    }

    /* Header Section */
    .confirmation-header {
        margin-bottom: 30px;
    }

        .confirmation-header h2 {
            font-size: 28px;
            color: #4caf50;
            display: flex;
            justify-content: center;
            align-items: center;
            font-weight: bold;
        }

            .confirmation-header h2 i {
                margin-right: 10px;
            }

    .confirmation-banner {
        width: 100%;
        height: auto;
        border-radius: 8px;
        margin-top: 15px;
    }

    /* Booking Details Section */
    .booking-details {
        margin: 30px 0;
        border-top: 1px solid #ddd;
        padding-top: 20px;
    }

    .detail-item {
        margin-bottom: 15px;
    }

        .detail-item h4 {
            font-size: 18px;
            color: #007bff;
            margin-bottom: 5px;
        }

        .detail-item p {
            font-size: 16px;
            color: #333;
        }

    /* Status Styling */
    .status {
        font-weight: bold;
        color: #28a745;
        font-size: 18px;
    }

    /* Confirmation Message */
    .confirmation-message {
        margin-top: 30px;
    }

        .confirmation-message p {
            font-size: 16px;
            color: #555;
            margin-bottom: 0;
        }
</style>