@{
    var Id = Context.Session.GetInt32("Id");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CabBookingSystem</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        /* Custom styling for the navbar */
        .navbar {
            background-color: #212529;
            padding: 1rem 2rem;
        }

        .navbar-brand {
            font-size: 1.5rem;
            font-weight: bold;
            color: #fff !important;
        }

        .navbar-nav .nav-link {
            color: #f8f9fa !important;
            padding: 0.5rem 1rem;
            font-size: 1.1rem;
        }

            .navbar-nav .nav-link:hover {
                color: #007bff !important;
                background-color: rgba(255, 255, 255, 0.1);
                border-radius: 0.25rem;
            }

        .btn-primary, .btn-outline-primary {
            border-radius: 20px;
            padding: 0.5rem 1.5rem;
        }

            .btn-primary:hover, .btn-outline-primary:hover {
                box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
            }

        /* Style the profile button if needed */
        .btn-profile {
            background-color: #6c757d;
            border: none;
        }

            .btn-profile:hover {
                background-color: #495057;
            }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container">
                <a class="navbar-brand" href="/Driver/Dashboard">
                    <i class="fas fa-taxi"></i> केB Karo
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Dashboard", "Driver")">Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Profile", "Driver")">Profile</a>
                        </li>
                    </ul>

                    <div class="d-flex">
                        @if (Id == null)
                        {
                            <!-- Show login and signup buttons if user is not logged in -->
                            <a href="/Driver/Login" class="btn btn-outline-primary me-2">Login</a>
                            <a href="/Driver/Signup" class="btn btn-primary">Signup</a>
                        }
                        else
                        {
                            <!-- Show logout button if user is logged in -->
                            <a href="/Account/Logout" class="btn btn-danger me-2">Logout</a>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-5">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-4">
        <div class="container text-center">
            &copy; 2024 - CabBookingSystem - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!-- Bootstrap JS & Popper.js -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
