@{
    Layout = "~/Views/Shared/CabDriverLayout.cshtml"; // Use the new layout
}

@if (TempData["driverExist"] != null)
{
    <div class="alert alert-warning">
        @TempData["driverExist"]
    </div>
}

<!-- Stylish Driver Signup Form -->
<div class="signup-container">
    <div class="signup-card">
        <h2>Driver Signup</h2>
        <form method="post" action="/Driver/Signup">
            <div class="form-group">
                <label for="driverName">Driver Name</label>
                <input type="text" class="form-control" id="driverName" name="driverName" placeholder="Enter your name" required />
            </div>
            <div class="form-group">
                <label for="location">Location</label>
                <input type="text" class="form-control" id="location" name="location" placeholder="Enter your location" required />
            </div>
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" class="form-control" id="email" name="email" placeholder="Enter your email" required />
            </div>
            <div class="form-group">
                <label for="phone">Phone Number</label>
                <input type="text" class="form-control" id="phone" name="phone" placeholder="Enter your phonenumber" required />
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" class="form-control" id="password" name="password" placeholder="Enter your password" required />
            </div>
            <div class="form-group">
                <label for="confirmPassword">Confirm Password</label>
                <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" placeholder="Confirm your password" required />
            </div>

            <!-- Cab Type Selection -->
            <div class="form-group">
                <label>Cab Type</label>
                <div class="cab-type-selection">
                    <label class="cab-type-option">
                        <input type="radio" name="cabType" value="1" required />
                        <div class="cab-type-info">
                            <img src="/images/mini_icon.png" alt="Mini Cab" class="cab-image" />
                            <span>Mini</span>
                        </div>
                    </label>
                    <label class="cab-type-option">
                        <input type="radio" name="cabType" value="2" required />
                        <div class="cab-type-info">
                            <img src="/images/Prime_Sedan_icon.png" alt="Prime Sedan" class="cab-image" />
                            <span>Prime Sedan</span>
                        </div>
                    </label>
                    <label class="cab-type-option">
                        <input type="radio" name="cabType" value="3" required />
                        <div class="cab-type-info">
                            <img src="/images/Prime_Suv_icon.png" alt="Prime SUV" class="cab-image" />
                            <span>Prime SUV</span>
                        </div>
                    </label>
                    <label class="cab-type-option">
                        <input type="radio" name="cabType" value="4" required />
                        <div class="cab-type-info">
                            <img src="/images/Prime_Suv+_icon.png" alt="Prime SUV+" class="cab-image" />
                            <span>Prime SUV+</span>
                        </div>
                    </label>
                </div>
            </div>

            <button type="submit" class="btn btn-primary">Signup</button>
        </form>
        <br />
        <a href="/Driver/Login" class="login-link">Already have an account? Login here</a>
    </div>
</div>

<!-- Styles for Signup Page -->
<style>
    .signup-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        padding: 20px;
    }

    .signup-card {
        background-color: #fff;
        padding: 40px;
        border-radius: 16px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        max-width: 500px;
        width: 100%;
        text-align: center;
        transition: box-shadow 0.3s ease-in-out;
    }

        .signup-card:hover {
            box-shadow: 0 12px 36px rgba(0, 0, 0, 0.15);
        }

    h2 {
        font-size: 30px;
        margin-bottom: 30px;
        color: #007bff;
        font-weight: bold;
    }

    .form-group {
        margin-bottom: 20px;
        text-align: left;
    }

    .form-control {
        width: 100%;
        padding: 12px;
        border: 1px solid #ddd;
        border-radius: 8px;
        transition: border-color 0.3s ease;
    }

        .form-control:focus {
            border-color: #007bff;
            outline: none;
        }

    .cab-type-selection {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        gap: 15px;
    }

    .cab-type-option {
        display: flex;
        align-items: center;
        width: 48%;
        cursor: pointer;
        background-color: #f8f9fa;
        border-radius: 8px;
        padding: 10px;
        transition: background-color 0.3s ease, box-shadow 0.3s ease;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
    }

        .cab-type-option:hover {
            background-color: #f1f1f1;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
        }

    .cab-type-info {
        display: flex;
        align-items: center;
    }

    .cab-image {
        width: 60px;
        height: auto;
        margin-right: 10px;
        border-radius: 8px;
        border: 2px solid transparent;
        transition: border-color 0.3s ease;
    }

    .cab-type-option input[type="radio"]:checked + .cab-type-info .cab-image {
        border-color: #007bff;
    }

    .btn-primary {
        background-color: #007bff;
        color: #fff;
        padding: 12px 25px;
        border-radius: 30px;
        box-shadow: 0 4px 10px rgba(0, 123, 255, 0.4);
        transition: background 0.3s ease, box-shadow 0.3s ease;
        width: 100%;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            box-shadow: 0 6px 15px rgba(0, 123, 255, 0.6);
        }

    .login-link {
        text-decoration: none;
        color: #007bff;
        margin-top: 20px;
        display: inline-block;
    }

        .login-link:hover {
            text-decoration: underline;
        }

    .alert {
        padding: 10px;
        border-radius: 8px;
        font-size: 14px;
        margin-bottom: 20px;
    }
</style>
