@{
    Layout = "~/Views/Shared/CabDriverLayout.cshtml"; // Use the new layout
}

@if (TempData["Message"] != null)
{
    <div class="alert alert-warning">
        @TempData["Message"]
    </div>
}

<!-- Stylish Driver Login Form -->
<div class="login-container">
    <div class="login-card">
        <h2>Driver Login</h2>
        <form method="post" action="/Driver/Login">
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" class="form-control" id="email" name="email" placeholder="Enter your email" required />
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" class="form-control" id="password" name="password" placeholder="Enter your password" required />
            </div>

            <div class="form-group">
                <a href="#" style="text-decoration:none">Forgot your password?</a>
            </div>

            <br />
            <button type="submit" class="btn btn-primary">Login</button>
        </form>
    </div>
</div>

<!-- Styles for Login Page -->
<style>
    .login-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 80vh;
        background: #f0f4f8;
    }

    .login-card {
        background-color: #fff;
        padding: 40px;
        border-radius: 15px;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        max-width: 380px;
        width: 100%;
        text-align: center;
    }

    h2 {
        font-size: 30px;
        margin-bottom: 25px;
        color: #333;
    }

    .form-group {
        margin-bottom: 20px;
        text-align: left;
    }

    .form-control {
        width: 100%;
        padding: 12px;
        border: 1px solid #ccc;
        border-radius: 10px;
        font-size: 16px;
    }

    .btn-primary {
        background-color: #007bff;
        color: #fff;
        padding: 12px 24px;
        border-radius: 30px;
        box-shadow: 0 4px 12px rgba(0, 123, 255, 0.5);
        font-size: 16px;
        transition: background 0.3s ease, box-shadow 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            box-shadow: 0 6px 16px rgba(0, 123, 255, 0.7);
        }

    .form-group a {
        font-size: 14px;
        color: #007bff;
    }

        .form-group a:hover {
            text-decoration: underline;
        }
</style>
